<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.NavigationView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        android:background="@android:color/white"
        app:itemTextColor="@color/black_main"
        app:headerLayout="@layout/survey_navigation_header_main">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="176dp">

        <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

            <TextView
                    android:id="@+id/surveys_section_title"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:textSize="18sp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:maxLines="1"
                    android:textStyle="italic"
                    android:textColor="@color/black_disabled"
                    android:text="Surveys"
                    />

        </RelativeLayout>

        <TextView
                android:text="Reload all forms"
                android:textColor="@color/black_main"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:drawablePadding="8dp"
                android:gravity="center"
                android:id="@+id/text_view_form_reload"/>
        <TextView
                android:text="Download form"
                android:textColor="@color/black_main"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:drawablePadding="8dp"
                android:gravity="center"
                android:id="@+id/text_view_single_form_download"/>

        <TextView
                android:text="Testing all Caddisfly Tests"
                android:textColor="@color/black_main"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="24dp"
                android:layout_marginStart="24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:drawablePadding="8dp"
                android:gravity="center"
                android:id="@+id/textView"/>

        <TextView
                android:text="Cascade survey"
                android:textColor="@color/black_main"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="24dp"
                android:layout_marginStart="24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="8dp"
                android:gravity="center"
                android:id="@+id/textView2"/>

        <View
                android:id="@+id/divider"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider"/>

        <TextView
                android:text="Settings"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:textColor="@color/black_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="8dp"
                android:gravity="center"
                android:id="@+id/textView3"/>

    </LinearLayout>
</android.support.design.widget.NavigationView>